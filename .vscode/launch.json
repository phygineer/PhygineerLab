    "version": "0.2.0",
    "configurations": [
        {
            "name": "backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.backend.main:app",
                "--reload",
                "--host",
                "0.0.0.0"
